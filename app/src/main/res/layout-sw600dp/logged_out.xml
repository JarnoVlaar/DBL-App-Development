<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/OngoingMatchesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OngoingMatches"
            android:theme="@style/TextSubTitleTablet"/>

        <TextView
            android:id="@+id/LoggedOutDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LoggedOutDescriptionText"
            android:theme="@style/TextTablet"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <LinearLayout
            android:id="@+id/LoggedOutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/CloudOffImage"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:contentDescription="@string/NoConnectionImageDescription"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/cloud_off_24px" />

            <TextView
                android:id="@+id/FeaturesDisabledTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/FeaturesDisabledDescription"
                android:theme="@style/TextTablet"/>

            <TextView
                android:id="@+id/OnlineMatchmakingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/OnlineMatchmakingText"
                android:theme="@style/TextTablet"/>

            <TextView
                android:id="@+id/OnlineMatchesWithFriendsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/OnlineMatchesWithFriendsText"
                android:theme="@style/TextTablet"/>
        </LinearLayout>

        <Button
            android:id="@+id/LoginButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/LoginButtonText"
            android:theme="@style/ButtonBlueTablet"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="6dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>