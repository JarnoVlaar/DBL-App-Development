<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StrataGrids" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ButtonWhite">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonDelete">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="strokeColor">@android:color/darker_gray</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="colorOnPrimary">@android:color/holo_red_light</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonBlue">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonIcon">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BoldText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.StrataGrids" parent="Base.Theme.StrataGrids" />

    <style name="ButtonColor" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>
</resources>