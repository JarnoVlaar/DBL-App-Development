<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_border">

    <TextView
        android:id="@+id/RulesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RulesTitle"
        android:theme="@style/BoldText"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/RulesTitle">

        <TextView
            android:id="@+id/SetupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SetupTitle"
            android:theme="@style/BoldText" />

        <TextView
            android:id="@+id/SetupDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SetupDescription"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/PlayingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PlayingTitle"
            android:theme="@style/BoldText" />

        <TextView
            android:id="@+id/PlayingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PlayingDescription"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/ScoringTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ScoringTitle"
            android:theme="@style/BoldText" />

        <TextView
            android:id="@+id/ScoringDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ScoringDescription" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>