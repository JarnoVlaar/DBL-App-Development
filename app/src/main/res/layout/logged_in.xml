<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggedIn">

        <LinearLayout
            android:id="@+id/MatchesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/MatchTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OngoingMatchestTitle"
                android:theme="@style/BoldText"/>

            <TextView
                android:id="@+id/YourTurnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/YourTurnDescription" />

            <TextView
                android:id="@+id/OpponentTurnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/OpponentsTurnDescription" />
        </LinearLayout>
</androidx.core.widget.NestedScrollView>