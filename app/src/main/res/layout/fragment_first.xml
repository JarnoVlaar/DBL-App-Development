<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:id="@+id/OverviewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/SettingsBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue"
            android:orientation="horizontal">

            <Button
                android:id="@+id/RulesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RulesButtonText"
                android:theme="@style/ButtonWhite"
                app:cornerRadius="6dp"/>

            <TextView
                android:id="@+id/UsernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/UsernameText" />


            <Button
                android:id="@+id/ProfileSettingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ProfileButtonText"
                android:theme="@style/ButtonWhite"
                app:cornerRadius="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MatchmakingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/MatchmakingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MatchmakingTitle"
                android:theme="@style/BoldText"/>

            <TextView
                android:id="@+id/MatchmakingDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/MatchmakingDescription" />

            <LinearLayout
                android:id="@+id/MatchmakingButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MatchmakingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MatchmakingButtonText"
                    android:theme="@style/ButtonWhite"
                    app:cornerRadius="6dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>

                <Button
                    android:id="@+id/LocalGameButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/LocalGameButtonText"
                    android:theme="@style/ButtonWhite"
                    app:cornerRadius="6dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>

                <Button
                    android:id="@+id/MatchcodeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/MatchcodeButtonText"
                    android:theme="@style/ButtonWhite"
                    app:cornerRadius="6dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MatchesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/MatchTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OngoingMatchestTitle"
                android:theme="@style/BoldText"/>

            <TextView
                android:id="@+id/YourTurnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/YourTurnDescription" />

            <TextView
                android:id="@+id/OpponentTurnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OpponentsTurnDescription" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>