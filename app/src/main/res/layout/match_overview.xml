<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayoutGameViewContainer"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/layout_border"
        android:padding="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <nl.tue.stratagrids.ui.game.GameBoardView
            android:id="@+id/gameBoardMatchPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/textGameAgainst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/game_against_no_placeholder"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutGameViewContainer"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutGameViewContainer"
        tools:ignore="RtlHardcoded" />


    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/textGameAgainst"
        app:layout_constraintTop_toBottomOf="@+id/textGameAgainst" />

            <TextView
                android:id="@+id/textScorePlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="2dp"
                android:textColor="@color/greenMedium"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textScore"
                app:layout_constraintTop_toTopOf="@+id/textScore"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textScoreDash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textScorePlayer1"
                app:layout_constraintTop_toTopOf="@+id/textScore"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/textScorePlayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:textColor="@color/orangeMedium"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textScoreDash"
                app:layout_constraintTop_toTopOf="@+id/textScore"
                tools:ignore="HardcodedText,RtlHardcoded" />


    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/play_rounded"
        android:drawablePadding="2dp"
        android:drawableTint="@color/dark_blue"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:text="@string/play"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:theme="@style/ButtonWhite"
        app:layout_constraintStart_toStartOf="@+id/textGameAgainst"
        app:layout_constraintTop_toBottomOf="@+id/textScore"
        tools:ignore="RtlHardcoded" />


</androidx.constraintlayout.widget.ConstraintLayout>
